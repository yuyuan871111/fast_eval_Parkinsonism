<!-- ./app/views/uploads/new.html.erb -->
<main>
  <%= render "partials/header" %>

  <div class="container-fluid px-4">
    <div class="row">
      
      <!-- flex-shrink-0 p-3 bg-grey -->
      <%= render "dashboard/partials/sidebar" %>
      
      <div class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><%= @hand_pos %></h1>

          <% if @hand_pos != "Please select the feature type." %>
            <%= link_to "Back to overview", dashboard_index_path(hand_pos: params[:hand_pos]), class: "btn btn-sm btn-outline-secondary", data: {turbo: false}  %>
          <% end %>

        </div>
        <% if @hand_pos != "Please select the feature type." %>
          <b class="fs-5"> <%= "Data usage: #{number_to_human_size(current_user.data_usage)}/#{number_to_human_size(current_user.data_usage_limit)}" %> </b>
          <br><br>
          <%= render "uploads/form/upload" %>
        <% end %>
        <% if flash[:notice] %>
          <p> <%= flash[:notice] %> </p>
          <p> If you succuessfully upload the video, please go back to the <b>overview</b> page to operate your videos and run analysis.</p>
          <%= link_to "Back to overview", dashboard_index_path(hand_pos: params[:hand_pos]), class: "btn btn-sm btn-outline-secondary", data: {turbo: false}  %>
        <% end %>
      
      </div>
    </div>
  </div>

  <%= render "partials/footer" %>
</main>

