<main>
  <%= render "partials/header" %>

  <div class="container-fluid px-4">
    <div class="row">
      
      <!-- flex-shrink-0 p-3 bg-grey -->
      <%= render "dashboard/partials/sidebar" %>

      <div class="col-md-9 ms-sm-auto col-lg-9 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><%= @hand_pos %></h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <% if @hand_pos != "Please select the feature type." %>
                <%= link_to "Download mp4", "#", class: "btn btn-sm btn-outline-secondary" %>
                <button type="button" class="btn btn-sm btn-outline-secondary">Download keypoint</button>
              <% end %>
            </div>
          </div>
        </div>

        <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>

        <h2>Section title</h2>
        <%= render "dashboard/partials/table" %>
      </div>
    </div>
  </div>

  <%= render "partials/footer" %>
</main>
